                        <Label Content="st" FontSize="24"></Label>
                    </WrapPanel>
                    <WrapPanel HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Label Content="Antal:" FontWeight="Bold" FontSize="24"></Label>
                        <Label Content="{Binding TotalFishes, FallbackValue=0}" FontWeight="Bold" FontSize="24"></Label>
                        <Label Content="st" FontWeight="Bold" FontSize="24"></Label>
                    </WrapPanel>
                    <WrapPanel HorizontalAlignment="Center">
                        <Label Content="Vikt:" FontWeight="Bold"  FontSize="24"></Label>
                        <Label Content="{Binding TotalWeight, FallbackValue=0}" FontWeight="Bold"  FontSize="24"></Label>
                        <Label Content="g" FontWeight="Bold" FontSize="24"></Label>
                    </WrapPanel>
                </StackPanel>
