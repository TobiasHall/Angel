                    </WrapPanel>
                
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <Label HorizontalAlignment="Center" Content="{Binding player.Nickname, FallbackValue=Fräddrik}" FontSize="38"></Label>
