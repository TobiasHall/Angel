                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="center">
                    <StackPanel HorizontalAlignment="Center">
                        <Label HorizontalAlignment="Center" Content="Din poäng:" FontSize="28"></Label>
                        <Label HorizontalAlignment="Center" Content="{Binding TotalScore, FallbackValue=0}" FontSize="28"></Label>
                    </StackPanel>
                    <Button Margin="5" Content="Tursnus" Style="{StaticResource RoundButtonTemplate}" Command="{Binding LuckySnuffBtn}" IsEnabled="{Binding LuckySnuffBtnEnabled}"></Button>
                    <Button Margin="5" Content="Ta en kaffe" Style="{StaticResource RoundButtonTemplate}" Command="{Binding CupOfCoffeBtn}" IsEnabled="{Binding CupOfCoffeBtnEnabled}"></Button>
                    <WrapPanel HorizontalAlignment="Center">
                        <Label FontSize="24" Content="Tursnus kvar: "></Label>
                        <Label FontSize="24" Content="{Binding LuckySnuffLabel, FallbackValue=3}"></Label>
                    </WrapPanel>
                    <WrapPanel HorizontalAlignment="Center">
                        <Label FontSize="24" Content="Kaffe kvar: "></Label>
                        <Label FontSize="24" Content="{Binding CupOfCoffeLabel, FallbackValue=5}"></Label>
                    </WrapPanel>
                </StackPanel>

                    <WrapPanel Grid.Column="1" Margin="20" HorizontalAlignment="Center">
                        <Button Content="Nytt spel" Style="{StaticResource RoundButtonTemplate}" Command="{Binding NewGameCommand}"></Button>
                        <Button Content="Huvudmenyn" Style="{StaticResource RoundButtonTemplate}" Command="{Binding MainMenuCommand}"></Button>
                    </WrapPanel>
                
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <Label HorizontalAlignment="Center" Content="{Binding player.Nickname, FallbackValue=Fräddrik}" FontSize="38"></Label>
                    <Label HorizontalAlignment="Center" Content="{Binding GameTimer, FallbackValue=00:00:00}" FontSize="28"></Label>
                    <WrapPanel HorizontalAlignment="Center">
                        <Label HorizontalAlignment="Center" Content="{Binding CollectedFishSpeciesLbl, FallbackValue=Öring:}" FontSize="28"></Label>
                        <Label HorizontalAlignment="Center" Content="{Binding CollectedFishWeightLbl, FallbackValue=1000}" FontSize="28"></Label>
                        <Label HorizontalAlignment="Center" Content="g" FontSize="28"></Label>
                    </WrapPanel>
                </StackPanel>

                <WrapPanel Uid="0" Name="FishAndHookDropZone" Grid.Column="1" VerticalAlignment="Bottom" Drop="PanelDrop">
                    <Image Margin="0,0,0,0" Source="/Resources/Images/fish-and-worm.png"></Image>                    
                </WrapPanel>
                
                


                <StackPanel VerticalAlignment="Center" Grid.Column="2">
                    
                    <WrapPanel HorizontalAlignment="Center">
                        <Label Content="Öring:" FontSize="24"></Label>
                        <Label Content="{Binding NrOfTrout, FallbackValue=0}" FontSize="24"></Label>
                        <Label Content="st" FontSize="24"></Label>
                    </WrapPanel>
                    <WrapPanel HorizontalAlignment="Center">
                        <Label Content="Röding:" FontSize="24"></Label>
